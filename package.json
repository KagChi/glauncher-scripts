{
  "name": "glauncher-scripts",
  "version": "1.0.0",
  "description": "A Collection of usefull GrowLauncher scripts written in typescript.",
  "main": "dist",
  "type": "module",
  "author": "KagChi",
  "license": "GPL-3.0",
  "scripts": {
    "build": "rimraf dist && npx typescript-to-lua",
    "lint": "eslint src --ext ts",
    "lint:fix": "eslint src --fix --ext ts"
  },
  "devDependencies": {
    "typescript-to-lua": "^1.9.0",
    "@hazmi35/eslint-config": "^8.4.2",
    "@types/node": "^17.0.31",
    "@typescript-eslint/eslint-plugin": "^5.35.1",
    "@typescript-eslint/parser": "^5.35.1",
    "eslint": "^8.22.0",
    "rimraf": "^3.0.2",
    "typescript": "^4.7.4"
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint"
    ],
    "parserOptions": {
      "project": "./tsconfig.json"
    },
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "@hazmi35/eslint-config/typescript"
    ],
    "rules": {
      "@typescript-eslint/no-unused-vars": "off",
      "no-constant-condition": "off",
      "@typescript-eslint/no-unnecessary-condition": "off"
    }
  }
}
